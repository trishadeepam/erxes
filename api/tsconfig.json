{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2015", "es6", "es7", "esnext.asynciterable"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "./src/**/*.ts",
    "typings.d.ts",
    "../plugins/**/api"
  ],
  "exclude": ["node_modules", "dist"]
}
